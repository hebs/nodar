extends ./templates/layout.pug

block content
 table.table
  thead
    tr
      th(scope='col') _id
      th(scope='col') Address
      th(scope='col') Sent
      th(scope='col') Received
      th(scope='col') Balance
  tbody
    each node in result.data
      tr
        th(scope='row') #{node._id}
        td #{node.address}
        td #{node.content.sent}
        td #{node.content.received}
        td #{node.content.balance}